---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: adrift
  namespace: argocd
  annotations:
    argocd-image-updater.argoproj.io/image-list: adrift=<AWS_ACCOUNT_ID>.dkr.ecr.<REGION>.amazonaws.com/<IMAGE_NAME>:latest
spec:
  project: pyflowops  # Minimal required field
  source:
    repoURL: "https://github.com/PyFlowOps/ADRift.git"  # Minimal required field
  destination:
    server: "https://kubernetes.default.svc"  # Minimal required field
